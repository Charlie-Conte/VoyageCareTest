@page "/account/userRegister"

<MudCard>
	<MudForm Model="@UserModel" @ref="@Form" Validation="@(_newUserModelValidator.ValidateValue)" ValidationDelay="0">
        <MudCardContent>
            <MudTextField @bind-Value="UserModel.UserName"
                          For="@(() => UserModel.UserName)"
                          Immediate="true"
                          Label="UserName" />

            <MudTextField @bind-Value="UserModel.Email"
                          For="@(() => UserModel.Email)"
                          Immediate="true"
                          Label="Email" />

            <MudTextField @bind-Value="UserModel.EmailCopy"
                          For="@(() => UserModel.EmailCopy)"
                          Immediate="true"
                          Label="Confirm Email" />

            <MudTextField @bind-Value="UserModel.PasswordHash"
                          For="@(() => UserModel.PasswordHash)"
                          Immediate="true"
                          Label="Password" />
        </MudCardContent>
        <MudCardContent>

        </MudCardContent>
    </MudForm>
	<MudCardActions>
		<MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await Submit())">Register</MudButton>
	</MudCardActions>
</MudCard>