@page "/counter"
@using StaffPortal.DataAccess.Auth
@using Microsoft.Data.SqlClient
@using StaffPortal.Logic
@using System.Data
@using DapperExtensions

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
<MudText Class="mb-4">Current count: @currentCount</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="Test">Test</MudButton>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void Test()
    {
        GetAllUsers();
    }

    private static List<AspNetUsers> GetAllUsers()
    {
        using (IDbConnection db = new SqlConnection(GlobalHelper.CoreConnectionString))
        {
            db.Open();
            List<AspNetUsers> users = db.GetList<AspNetUsers>().ToList();
            db.Close();

            return users;
        }
    }
}
